<section class="row">
    <div class="column">
        <h3 id="writePost">Write Post!</h3>

        <form class="new-post-form">
            <div>
                <label for="post-title">Post Title</label>
                <input type="text" id="post-title" name="post-title" />
            </div>
            <div>
                <label for="post-text"> Post Text</label>
                <textarea id="post-text" name="post-text"></textarea>
            </div>
            <button id='addBtn'type="submit" class="btn"> Add Post!</button>
        </form>
    </div>
    <div class="column">
        <h3 id='userProfile'>User Profile</h3>
        {{> user-info}}
    </div>

</section>

{{#if posts.length}}
<section>
    <h3> Posts</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<!--Script to add a post-->
<script src="/javascript/add-post.js"></script>
